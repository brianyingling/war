.row
  .eight.columns
    %h1 It's War!
    #result
    #board
      #player_hand.card
      #computer_hand.card
    .cards
      %div
        %span "Player's Cards: "
        %span#players_cards
      %div
        %span "Computer's Cards: "
        %span#computers_cards
      %div
        %span "Total: "
        %span#total_cards
      %div
        %span "Rounds :"
        %span#rounds
    =button_tag "Start Game", :id=>'startgame'
    =button_tag "Play Hand", :id=>'playhand'
    =button_tag "Speed Play", :id=>'speedplay'
  .four.columns
    %h3 Leaderboard
    #leaderboard
      - @leaderboard.each do |user|
        .record
          = user[0]
          = user[1]
